{
  "name": "dashboard-impact-multi-activites",
  "version": "1.0.0",
  "description": "Dashboard Multi-Activit√©s - Impact Associatif",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder"
  },
  "keywords": ["dashboard", "impact", "questionnaire"],
  "author": "Votre Nom",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "build": {
    "appId": "com.impact.dashboard",
    "productName": "Dashboard Impact",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "preload.js",
      "src/**/*"
    ],
    "win": {
      "target": "nsis",
      "icon": "src/icon.png"
    },
    "mac": {
      "target": "dmg",
      "icon": "src/icon.icns"
    },
    "linux": {
      "target": "AppImage",
      "icon": "src/icon.png"
    }
  }
}